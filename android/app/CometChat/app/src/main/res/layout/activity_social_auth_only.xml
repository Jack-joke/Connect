<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewAppLogoInPhoneNumber"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_preview"
        android:maxHeight="@dimen/app_logo_height"
        android:maxWidth="@dimen/app_logo_width"
        android:src="@drawable/logo_login" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in Using "
        android:textSize="20sp"
        android:textColor="#9e9e9e"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        />

        <com.facebook.widget.LoginButton xmlns:fb="http://schemas.android.com/apk/res-auto" android:gravity="center" android:id="@+id/facebookLoginButton" android:layout_width="match_parent" android:layout_height="60dp"
                                         android:visibility="gone" android:layout_marginBottom="5dp"
                                         android:layout_marginLeft="40dp"
                                         android:layout_marginRight="40dp"
                                         android:layout_marginTop="5dp" fb:login_text="Facebook" fb:logout_text=""
            />

        <Button
            android:id="@+id/custom_facebook_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="false"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="Facebook"
            android:paddingLeft="30dp"
            android:gravity="left|center_vertical"
            android:textSize="17sp"
            android:textColor="@color/tw__solid_white"
            android:drawableLeft="@drawable/ic_social_facebook"
            android:drawablePadding="60dp"
            android:background="@drawable/logout_button_background"
            />



    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/twitterLoginButton"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:visibility="gone" />

    <!--<ImageButton
        android:id="@+id/imageButtonCustomTwitterBtn"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/twitter_signin_btn"
        android:contentDescription="@string/splash_content_description"
        android:scaleType="fitXY" />-->

    <Button
        android:id="@+id/imageButtonCustomTwitterBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="false"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:text="Twitter"
        android:paddingLeft="30dp"
        android:gravity="left|center_vertical"
        android:textSize="17sp"
        android:textColor="@color/tw__solid_white"
        android:drawableLeft="@drawable/ic_social_twitter"
        android:drawablePadding="65dp"
        android:background="@drawable/logout_button_background"
        />

  <!--  <ImageButton
        android:id="@+id/imageButtonCustomgplusBtn"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/google_singin_btn"
        android:contentDescription="@string/splash_content_description"
        android:scaleType="fitXY" />-->


    <Button
        android:id="@+id/imageButtonCustomgplusBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:clickable="false"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:text="Google"
        android:paddingLeft="30dp"
        android:gravity="left|center_vertical"
        android:textSize="17sp"
        android:textColor="@color/tw__solid_white"
        android:drawableLeft="@drawable/ic_social_google"
        android:drawablePadding="68dp"
        android:background="@drawable/logout_button_background"
        />

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progressWheel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        wheel:matProg_barColor="@color/login_button" />

    <Button
        android:id="@+id/textViewLoginAsGuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_button_alternative_selector"
        android:gravity="center"
        android:maxWidth="300dp"
        android:minWidth="250dp"
        android:padding="12dp"
        android:text="Login as a guest"
        android:textAllCaps="false"
        android:textColor="@color/login_button" />

    <ImageView
        android:id="@+id/imageViewBottomBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_custom_back_arrow" />

</LinearLayout>