                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:text="Games" />


                    <ImageView

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/image_preview"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical|center_horizontal"
                        android:src="@drawable/new_ic_forward_arrow" />

                </RelativeLayout>

            </LinearLayout>




            <LinearLayout
                android:id="@+id/ll_share_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:padding="10dp" >

                    <ImageView
                        android:id="@+id/img_share_app"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="image"
                        android:padding="12dp"
                        android:background="@drawable/chatroom_background"
                        android:src="@drawable/ic_share_this_app" />

                    <TextView
                        android:id="@+id/setting_share_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@+id/img_share_app"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:text="Share This App" />


                    <ImageView

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/image_preview"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical|center_horizontal"
                        android:src="@drawable/new_ic_forward_arrow" />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_invite_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:padding="10dp" >

                    <ImageView
                        android:id="@+id/img_invite_contact"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="image"
                        android:padding="12dp"
                        android:background="@drawable/chatroom_background"
                        android:src="@drawable/ic_invite_user" />

                    <TextView
                        android:id="@+id/textInvitePhoneContact"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@+id/img_invite_contact"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:text="Invite Phone Contacts" />


                    <ImageView

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/image_preview"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical|center_horizontal"
                        android:src="@drawable/new_ic_forward_arrow" />

                </RelativeLayout>

            </LinearLayout>


