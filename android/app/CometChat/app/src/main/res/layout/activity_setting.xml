                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="image"
                        android:padding="12dp"
                        android:background="@drawable/chatroom_background"
                        android:src="@drawable/ic_blocked_users" />

                    <TextView
                        android:id="@+id/block_user_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@+id/setting_block_user"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:text="Blocked Users" />

                    <TextView
                        android:id="@+id/block_user_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@+id/setting_block_user"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/cometchat_grey"
                        android:textSize="15sp"
                        android:layout_below="@+id/block_user_title"
                        android:text="3" />


                    <ImageView

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/image_preview"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical|center_horizontal"
                        android:src="@drawable/new_ic_forward_arrow" />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_setting_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
