<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    android:fillViewport="true"
    android:padding="15dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <ImageView
            android:id="@+id/imageViewAppLogoInPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image_preview"
            android:maxHeight="@dimen/app_logo_height"
            android:maxWidth="@dimen/app_logo_width"
            android:src="@drawable/logo_login" />

        <Spinner
            android:id="@+id/buttonSelectCountry"
            android:layout_width="@dimen/phone_number_spineer_width"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:spinnerMode="dropdown"
            android:text="Select country" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edittextCountryCodes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Code"
                android:inputType="phone"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/login_text"
                android:textColorHint="@color/login_text_hint"
                android:textCursorDrawable="@null" />

            <EditText
                android:id="@+id/editTextPhonenumberField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter phone number"
                android:inputType="phone"
                android:maxLength="10"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/login_text"
                android:textColorHint="@color/login_text_hint"
                android:textCursorDrawable="@null">

                <requestFocus />
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/buttonSubmitPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/custom_button_selector"
            android:maxWidth="300dp"
            android:minWidth="250dp"
            android:text="@string/register_user_link_text"
            android:textAllCaps="false"
            android:textColor="@color/login_button_text" />

        <com.pnikosis.materialishprogress.ProgressWheel
            android:id="@+id/progressWheel"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:visibility="invisible"
            wheel:matProg_barColor="@color/login_button"
            wheel:matProg_progressIndeterminate="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/textViewLoginViaEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_button_alternative_selector"
                android:gravity="center"
                android:maxWidth="300dp"
                android:minWidth="250dp"
                android:padding="12dp"
                android:text="Login with Username/Password"
                android:textAllCaps="false"
                android:textColor="@color/login_button" />

            <Button
                android:id="@+id/textViewLoginViaSocialAuth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_button_alternative_selector"
                android:gravity="center"
                android:maxWidth="300dp"
                android:minWidth="250dp"
                android:padding="12dp"
                android:text="Login with Facebook, Twitter or Google"
                android:textAllCaps="false"
                android:textColor="@color/login_button" />

            <Button
                android:id="@+id/textViewLoginAsGuest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/login_button_alternative_selector"
                android:gravity="center"
                android:maxWidth="300dp"
                android:minWidth="250dp"
                android:padding="12dp"
                android:text="Login as Guest"
                android:textAllCaps="false"
                android:textColor="@color/login_button" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewBottomBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_custom_back_arrow" />

    </LinearLayout>
</ScrollView>

