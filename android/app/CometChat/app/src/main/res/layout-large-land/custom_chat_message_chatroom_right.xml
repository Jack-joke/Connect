<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:wheel="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
    >

    <com.inscripts.custom.RoundedImageView
        android:id="@+id/imageViewUserAvatar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/newContainer"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:padding="2dp"
        android:visibility="gone"
        android:src="@drawable/default_avatar"
        />

    <View
        android:id="@+id/rightArrow"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="-27dp"
        android:layout_alignParentRight="true"
        android:layout_toLeftOf="@+id/imageViewUserAvatar"
        android:background="@drawable/message_arrow_right"
        android:focusable="false"
        android:rotation="180"/>


    <RelativeLayout
        android:id="@+id/newContainer"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@id/rightArrow"
        android:clipChildren="true"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/linearLayoutChatroomMessageRightContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_right_bubble"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/textViewChatroomSenderNameRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="220dp"
                android:text="@string/sender_name"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewChatroomSenderNameRight">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <com.inscripts.emoji.custom.EmojiTextView
                        android:id="@+id/textViewChatroomMessageRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="all"
                        android:maxWidth="220dp"
                        android:layout_marginTop="3dp"
                        android:text="@string/message"
                        android:textColor="#fff"
                        android:textColorLink="#FFF"
                        android:textSize="16sp"/>

                    <RelativeLayout
                        android:id="@+id/relativeLayoutAudioNoteContainer"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/imageViewPlayIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/play"/>

                        <TextView
                            android:id="@+id/textViewTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="8dp"
                            android:text="00:00"/>

                        <SeekBar
                            android:id="@+id/seek_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/textViewTime"
                            android:layout_toRightOf="@id/imageViewPlayIcon"/>
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/imageViewChatroomImageMessageRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewChatroomMessageRight"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/image_preview"
                        android:maxHeight="220dp"
                        android:maxWidth="220dp"
                        android:src="@drawable/thumbnail_default"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/imageViewChatroomVideoMessageRight"
                        android:layout_width="180dp"
                        android:layout_height="113dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/image_preview"
                        android:scaleType="fitXY"
                        android:src="@drawable/thumbnail_default"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/imageViewChatroomVideoMessageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/image_preview"
                        android:maxHeight="50dp"
                        android:maxWidth="50dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/download_video_button"
                        android:visibility="gone"/>

                    <com.pnikosis.materialishprogress.ProgressWheel
                        android:id="@+id/progressWheelVideo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        wheel:matProg_barColor="@color/login_button"
                        wheel:matProg_progressIndeterminate="true"/>
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/customImageViewOneOnOneImageMessageRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image_preview"
            android:maxHeight="230dp"
            android:maxWidth="230dp"
            android:src="@drawable/thumbnail_default"
            android:visibility="gone"/>

        <com.inscripts.emoji.custom.EmojiTextView
            android:id="@+id/textViewChatroomSmileyRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:textColor="#fff"
            android:maxWidth="250dp"
            android:textColorLink="#FFF"
            android:visibility="visible"
            android:textSize="18sp"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="-15dp"
        android:layout_below="@+id/newContainer"
        android:layout_toLeftOf="@+id/newContainer"
        >

        <TextView
            android:id="@+id/textViewChatroomMessageTimestampRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/time_stamp"
            android:textColor="#cbcbcc"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:visibility="visible" />

    </RelativeLayout>

</RelativeLayout>