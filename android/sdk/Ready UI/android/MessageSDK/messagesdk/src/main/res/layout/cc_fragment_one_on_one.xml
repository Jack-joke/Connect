<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cc_rounded_corners"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayoutNoUsersMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:visibility="gone">

        <TextView
            android:id="@+id/textViewNoUsersMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/no_users_available"
            android:textSize="16sp"/>
    </RelativeLayout>

    <com.tubb.smrv.SwipeMenuListView
        android:id="@+id/List_of_users"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:background="@drawable/cc_rounded_corners"
        android:dividerHeight="0dp"
        android:fastScrollEnabled="true"
        android:footerDividersEnabled="false"
        android:overScrollFooter="@android:color/transparent">
    </com.tubb.smrv.SwipeMenuListView>

</RelativeLayout>