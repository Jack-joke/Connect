<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cc_transperent_layout" >

    <ImageView
        android:id="@+id/imageViewLargePreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/image_preview"
        android:src="@drawable/cc_thumbnail_default" />

    <ImageView
        android:id="@+id/imageViewClosePreviewPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/image_preview"
        android:padding="16dp"
        android:src="@drawable/cc_close_image_preview_popup" />

    <ImageView
        android:id="@+id/imageViewVideoPlayButtonForPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/image_preview"
        android:src="@drawable/cc_play_video_button"
        android:visibility="gone" />

</RelativeLayout>